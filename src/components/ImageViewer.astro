---
import ImageViewerOverlay from "./ImageViewerOverlay.astro";
---

<image-viewer
  class="is-relative is-flex is-justify-content-center is-align-items-center"
>
  <img />
  <ImageViewerOverlay />
</image-viewer>

<style>
  image-viewer {
    height: 100%;
  }

  img {
    width: 100%;
    height: 100vh;
    object-fit: contain;
  }
</style>

<script src="@scripts/image-viewer.ts"></script>
